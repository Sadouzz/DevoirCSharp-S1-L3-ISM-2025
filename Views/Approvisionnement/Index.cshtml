@{
    ViewData["Title"] = "Approvisionnement Page";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Gestion des Approvisionnements</h1>

        <button class="btn btn-primary" type="submit">
            <i class="fas fa-plus"></i> Nouvel approvisionnement
        </button>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="card-title">
                <h5>
                    Filtres et recherche
                </h5>
            </div>
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Nouveau">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Nouveau">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Nouveau">
                    </div>
                </div>
                <div class="col-md-3">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-plus"></i> Filtrer
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="card p-3">
        <div class="card-body">

            <div class="mb-2">
                <table class="table table-hover m-0">
                    <thead class="table-secondary">
                        <tr>
                            <th>Référence</th>
                            <th>Date</th>
                            <th>Fournisseur</th>
                            <th>Articles</th>
                            <th>Montant total</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>APP-2023-001</td>
                            <td>15/04/2023</td>
                            <td>Textiles Dakar SARL</td>
                            <td>
                                
                                    <span class="badge bg-primary">12</span>
                                
                            </td>
                            <td>{{ emp.depName }}</td>
                            <td>
                                {% include "comps/statut.html.twig" with {active: not emp.isArchived} %}
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="#" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i> Details
                                    </a>
                                    <a href="#" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a href="#" class="btn btn-sm btn-danger
                                            {% if emp.isArchived %} disabled {% endif %}">
                                        <i class="fas fa-trash"></i> Archiver
                                    </a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>


            <div class="alert alert-danger" role="alert">
                Pas d'employés correspondant au filtre
            </div>

            <div class="alert alert-danger" role="alert">
                La liste d'employés est vide
            </div>

            <div class="alert alert-danger" role="alert">
                Le département n'existe pas
            </div>

        </div>
    </div>
</div>